<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/curved_rectangle"
            android:layout_width="970px"
            android:layout_height="1600px"
            android:layout_centerInParent="true"
            android:background="@drawable/rectangle_17"
            android:layout_marginTop="30px"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY" />

        <Button
            android:layout_centerHorizontal="true"
            android:id="@+id/login_button"
            android:layout_width="750px"
            android:layout_height="120px"
            android:layout_below="@id/remember_me"
            android:layout_marginTop="14dp"
            android:background="#550000"
            android:text="Log In"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="Campus Resource Booking System "
            android:textColor="#000000"
            android:textSize="19sp" />



        <EditText
            android:layout_centerHorizontal="true"
            android:id="@+id/username"
            android:layout_width="800px"
            android:layout_height="120px"
            android:textSize="15dp"
            android:layout_below="@id/title"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_23"
            android:hint="Username" />

        <EditText
            android:layout_centerHorizontal="true"
            android:id="@+id/password"
            android:layout_width="800px"
            android:layout_height="120px"
            android:layout_below="@id/username"
            android:layout_marginTop="6dp"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_23"
            android:hint="Password"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/remember_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="4dp"
            android:text="Remember Me"
            android:textColor="#000000"
            android:textSize="10sp" />


        <ImageView
            android:id="@+id/logo"
            android:layout_width="194dp"
            android:layout_centerHorizontal="true"
            android:layout_height="206dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="37dp"
            android:contentDescription="Logo"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/promotional_image"
            android:layout_below="@id/curved_rectangle"
            android:layout_marginTop="19dp"
            android:layout_width="1080dp"
            android:layout_height="680dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/promo_image"
            android:contentDescription="Promotional Image" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>